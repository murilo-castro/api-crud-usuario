generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id @default(uuid())
  name           String
  sex            String
  date_of_birth  String
  Marital_status String

  address Address[]

  @@map("users")
}

model Address {
  id           String @id @default(uuid())
  zip_code     String
  address      String
  number       String
  complement   String
  neiguborhood String
  state        String
  city         String

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("address")
}
